{
  "compilerOptions": {

    "target": "es2016",                             
    "module": "commonjs",                            
    "rootDir": "./",                                
    "moduleResolution": "node10",                  
    "outDir": "./dist",                     
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                
    "skipLibCheck": true                               
  },
  "include": [
    "src/**/*.ts" ,
    "database/**/*.ts" 

  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts"   
  ]
}
